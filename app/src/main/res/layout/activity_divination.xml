<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".DivinationActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/gregorianDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gregorian Date and Time"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/lunarDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lunar Date and Time"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/fourValuesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Four Values"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/testto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="18sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp">


        <GridLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="3"
            android:columnCount="3"
            android:padding="16dp">

            <!-- Row 1 -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@android:color/holo_blue_light" />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@android:color/holo_green_light" />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@android:color/holo_orange_light" />

            <!-- Row 2 -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@android:color/holo_red_light" />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@android:color/holo_purple" />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@android:color/holo_blue_dark" />

            <!-- Row 3 -->
            <TextView
                android:id="@+id/textViewWithBorder"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:padding="10dp"
                android:textSize="16sp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@android:color/holo_orange_dark" />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@android:color/white" />

        </GridLayout>

        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </LinearLayout>

</LinearLayout>