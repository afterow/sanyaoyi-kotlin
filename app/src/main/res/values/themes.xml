<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- 基础应用主题 -->
    <style name="Theme.Sanyaoyi" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- 主要品牌颜色 -->
        <item name="colorPrimary">@color/purple_500</item> <!-- 主要颜色 -->
        <item name="colorPrimaryVariant">@color/purple_700</item> <!-- 主要颜色变体 -->
        <item name="colorOnPrimary">@color/white</item> <!-- 主要颜色上的文字颜色 -->

        <!-- 辅助品牌颜色 -->
        <item name="colorSecondary">@color/teal_200</item> <!-- 辅助颜色 -->
        <item name="colorSecondaryVariant">@color/teal_700</item> <!-- 辅助颜色变体 -->
        <item name="colorOnSecondary">@color/black</item> <!-- 辅助颜色上的文字颜色 -->

        <!-- 状态栏颜色 -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!--Android 5.x开始需要把颜色设置透明，否则导航栏会呈现系统默认的浅灰色-->
        <item name="android:statusBarColor">@android:color/transparent</item>

        <!-- 移除标题栏和ActionBar -->
        <item name="windowNoTitle">true</item> <!-- 不显示标题 -->
        <item name="windowActionBar">false</item> <!-- 不显示ActionBar -->

        <!-- 在此处自定义您的主题 -->
    </style>

    <style name="Theme.Sanyaoyi.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground"></item>>
    </style>

    <style name="Theme.Sanyaoyi.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Sanyaoyi.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
